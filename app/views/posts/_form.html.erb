<%= form_for @post, html: { multipart: true } do |f| %>

  <%= f.file_field :image %>

  <div class='form-group'>
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", required: 'required' %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.hidden_field :author, value: current_user.name %>
  </div>


  <div class="form-group">
    <b>Tags</b><br>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |c| %>
    <%= c.label { c.check_box } %>
    <span class="cb-tags"><%= c.object.name %></span>
    <% end %>
  </div>


  <div class='form-group'>
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
